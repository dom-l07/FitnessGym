<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
        <link href="/css/style.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <%- include('../partials/navbar') %>

        <div class="container py-5">
            <div class="row">
                <!-- User Profile Sidebar -->
                <div class="col-md-3">
                    <div class="card border-0 ">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <img src="/uploads/profile-pictures/<%= user.profile_picture || 'defaultProfilePicture.jpg' %>" 
                                     alt="Profile" class="rounded-circle" 
                                     style="width: 80px; height: 80px; object-fit: cover; border: 3px solid #007bff;"
                                     onerror="this.src='/images/defaultProfilePicture.jpg'">
                            </div>
                            <h5 class="card-title"><%= user.username %></h5>
                            <p class="card-text text-muted">
                                <span class="badge bg-primary">Member</span>
                            </p>
                            <p class="small text-muted"><%= user.email %></p>
                            <div class="d-grid gap-2">
                                <a href="/editProfile" class="btn btn-outline-primary btn-sm">Edit Profile</a>
                                <a href="/billings" class="btn btn-outline-warning btn-sm">Billing History</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Main Dashboard Content -->
                <div class="col-md-9">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 text-primary fw-bold">My Dashboard</h1>
                        <span class="text-light">Welcome back, <%= user.username %>!</span>
                    </div>

                    <% if (messages && messages.length > 0) { %>
                        <div class="alert alert-success border-0 rounded-3 mb-4">
                            <% messages.forEach(function(message) { %>
                                <p class="mb-0"><i class="bi bi-check-circle-fill me-2"></i><%= message %></p>
                            <% }); %>
                        </div>
                    <% } %>

                    <!-- Quick Stats Cards -->
                    <div class="row g-4 mb-5">
                        <div class="col-md-4">
                            <div class="card border-0 bg-primary text-white">
                                <div class="card-body text-center">
                                    <div class="display-6 mb-2">üìÖ</div>
                                    <h5 class="card-title">My Bookings</h5>
                                    <h3 class="fw-bold"><%= bookings ? bookings.length : 0 %></h3>
                                    <p class="card-text">Recent bookings</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card border-0 bg-success text-white">
                                <div class="card-body text-center">
                                    <div class="display-6 mb-2">üèãÔ∏è</div>
                                    <h5 class="card-title">Available Classes</h5>
                                    <h3 class="fw-bold"><%= upcomingClasses ? upcomingClasses.length : 0 %></h3>
                                    <p class="card-text">Classes to book</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card border-0 bg-warning text-dark">
                                <div class="card-body text-center">
                                    <div class="display-6 mb-2">üí≥</div>
                                    <h5 class="card-title">Recent Bills</h5>
                                    <h3 class="fw-bold"><%= billings ? billings.length : 0 %></h3>
                                    <p class="card-text">Recent transactions</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Bookings Section -->
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card border-0" style="height: 400px;">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="bi bi-calendar-check me-2"></i>Recent Bookings</h5>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <% if (bookings && bookings.length > 0) { %>
                                        <% bookings.forEach(function(booking) { %>
                                            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                                <div>
                                                    <h6 class="mb-1"><%= booking.class_name %></h6>
                                                    <small class="text-muted">
                                                        <i class="bi bi-geo-alt me-1"></i><%= booking.location_name %> - <%= booking.room_name %>
                                                    </small><br>
                                                    <small class="text-muted">
                                                        <i class="bi bi-clock me-1"></i><%= new Date(booking.class_start_time).toLocaleDateString() %>
                                                    </small>
                                                </div>
                                                <span class="badge bg-<%= booking.status === 'Booked' ? 'success' : booking.status === 'Cancelled' ? 'danger' : 'primary' %>">
                                                    <%= booking.status %>
                                                </span>
                                            </div>
                                        <% }); %>
                                        <div class="text-center mt-auto">
                                            <a href="/bookings" class="btn btn-outline-primary">View All Bookings</a>
                                        </div>
                                    <% } else { %>
                                        <div class="text-center py-4 d-flex flex-column justify-content-center flex-fill">
                                            <div class="display-6 text-muted mb-3">üìÖ</div>
                                            <h6 class="text-muted">No bookings yet</h6>
                                            <p class="text-muted">Book your first class to get started!</p>
                                            <a href="/classes" class="btn btn-primary">Browse Classes</a>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <!-- Available Classes Section -->
                        <div class="col-md-6">
                            <div class="card border-0" style="height: 400px;">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Available Classes</h5>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <% if (upcomingClasses && upcomingClasses.length > 0) { %>
                                        <% upcomingClasses.forEach(function(classItem, index) { %>
                                            <% if (index < 3) { %>
                                                <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                                    <div>
                                                        <h6 class="mb-1"><%= classItem.class_name %></h6>
                                                        <small class="text-muted">
                                                            <i class="bi bi-person me-1"></i><%= classItem.instructor_name %>
                                                        </small><br>
                                                        <small class="text-muted">
                                                            <i class="bi bi-clock me-1"></i><%= new Date(classItem.class_start_time).toLocaleDateString() %>
                                                        </small>
                                                    </div>
                                                    <div class="text-end">
                                                        <span class="badge bg-info mb-1"><%= classItem.available_spots %> spots left</span><br>
                                                        <button class="btn btn-sm btn-primary">Book</button>
                                                    </div>
                                                </div>
                                            <% } %>
                                        <% }); %>
                                        <div class="text-center mt-auto">
                                            <a href="/classes" class="btn btn-outline-success">View All Classes</a>
                                        </div>
                                    <% } else { %>
                                        <div class="text-center py-4 d-flex flex-column justify-content-center flex-fill">
                                            <div class="display-6 text-muted mb-3">üèãÔ∏è</div>
                                            <h6 class="text-muted">No upcoming classes</h6>
                                            <p class="text-muted">Check back later for new classes!</p>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
