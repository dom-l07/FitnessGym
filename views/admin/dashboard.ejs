<!DOCTYPE html>
<head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container py-5">
        <div class="row">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <img src="/images/<%= user.profile_picture || 'defaultProfilePicture.png' %>" 
                                 alt="Profile" class="rounded-circle" 
                                 style="width: 80px; height: 80px; object-fit: cover; border: 3px solid #007bff;"
                                 onerror="this.src='https://via.placeholder.com/80x80/007bff/ffffff?text=<%= user.username.charAt(0).toUpperCase() %>'">
                        </div>
                        <h5 class="card-title"><%= user.username %></h5>
                        <p class="card-text text-muted">
                            <% if (user.role === 'admin') { %>
                                <span class="badge bg-warning text-dark">Administrator</span>
                            <% } else { %>
                                <span class="badge bg-primary">Member</span>
                            <% } %>
                        </p>
                        <p class="small text-muted"><%= user.email %></p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-9">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 text-primary fw-bold">
                        <% if (user.role === 'admin') { %>
                            Admin Dashboard
                        <% } else { %>
                            My Dashboard
                        <% } %>
                    </h1>
                    <span class="text-white">Welcome back, <%= user.username %>!</span>
                </div>

                <% if (messages && messages.length > 0) { %>
                    <div class="alert alert-success border-0 rounded-3 mb-4">
                        <% messages.forEach(function(message) { %>
                            <p class="mb-0"><i class="bi bi-check-circle-fill me-2"></i><%= message %></p>
                        <% }); %>
                    </div>
                <% } %>

                <div class="row g-4">
                    <% if (user.role === 'admin') { %>
                        <!-- Admin Dashboard Cards -->
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="display-6 text-primary mb-3">üë•</div>
                                    <h5 class="card-title">Manage Members</h5>
                                    <p class="card-text text-muted">View and manage gym members</p>
                                    <a href="/admin/members" class="btn btn-outline-primary">View Members</a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="display-6 text-success mb-3">üèãÔ∏è</div>
                                    <h5 class="card-title">Manage Classes</h5>
                                    <p class="card-text text-muted">Create and manage fitness classes</p>
                                    <a href="/admin/classes" class="btn btn-outline-success">Manage Classes</a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="display-6 text-warning mb-3">üè¢</div>
                                    <h5 class="card-title">Manage Locations</h5>
                                    <p class="card-text text-muted">Manage gym locations and rooms</p>
                                    <a href="/admin/locations" class="btn btn-outline-warning">Manage Locations</a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="display-6 text-danger mb-3">‚öôÔ∏è</div>
                                    <h5 class="card-title">Settings</h5>
                                    <p class="card-text text-muted">System configuration</p>
                                    <a href="/admin/settings" class="btn btn-outline-danger">Settings</a>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <!-- Member Dashboard Cards -->
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="display-6 text-primary mb-3">üìÖ</div>
                                    <h5 class="card-title">My Bookings</h5>
                                    <p class="card-text text-muted">View and manage your bookings</p>
                                    <a href="/bookings" class="btn btn-outline-primary">View Bookings</a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="display-6 text-success mb-3">üèãÔ∏è</div>
                                    <h5 class="card-title">Browse Classes</h5>
                                    <p class="card-text text-muted">Find and book fitness classes</p>
                                    <a href="/classes" class="btn btn-outline-success">Browse Classes</a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="display-6 text-warning mb-3">üè¢</div>
                                    <h5 class="card-title">Locations</h5>
                                    <p class="card-text text-muted">Find gym locations near you</p>
                                    <a href="/locations" class="btn btn-outline-warning">View Locations</a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="display-6 text-info mb-3">üë§</div>
                                    <h5 class="card-title">My Profile</h5>
                                    <p class="card-text text-muted">Update your personal information</p>
                                    <a href="/profile" class="btn btn-outline-info">Edit Profile</a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>

            </div>
        </div>
    </div>
</body>
</html>
