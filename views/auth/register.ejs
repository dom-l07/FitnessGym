<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="/css/style.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <%- include('../partials/navbar') %>

        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="card shadow-lg border-0">
                        <div class="card-body p-4">
                            <h1 class="card-title text-center mb-4 fw-bold text-primary">Create Your Account</h1>
                            
                            <% if (messages && messages.length > 0) { %>
                                <div class="alert alert-danger border-0 rounded-3">
                                    <% messages.forEach(function(message) { %>
                                        <p class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i><%= message %></p>
                                    <% }); %>
                                </div>
                            <% } %>
                            
                            <form action="/register" method="POST">
                                <div class="mb-3">
                                    <label for="username" class="form-label fw-semibold">Username</label>
                                    <input type="text" id="username" name="username" class="form-control form-control-lg border-2" required 
                                    <% if (formData && formData.username) { %> value="<%= formData.username %>" <% } else { %> value="" <% } %>>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="email" class="form-label fw-semibold">Email Address</label>
                                    <input type="email" id="email" name="email" class="form-control form-control-lg border-2" required 
                                    <% if (formData && formData.email) { %> value="<%= formData.email %>" <% } else { %> value="" <% } %>>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="password" class="form-label fw-semibold">Password</label>
                                    <input type="password" id="password" name="password" class="form-control form-control-lg border-2" required>
                                    <div class="form-text">Password must be at least 8 characters long.</div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="gender" class="form-label fw-semibold">Gender</label>
                                            <select id="gender" name="gender" class="form-select form-select-lg border-2" required>
                                                <option value="">Select Gender</option>
                                                <option value="male" <% if (formData && formData.gender === 'male') { %> selected <% } %>>Male</option>
                                                <option value="female" <% if (formData && formData.gender === 'female') { %> selected <% } %>>Female</option>
                                                <option value="other" <% if (formData && formData.gender === 'other') { %> selected <% } %>>Other</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="dob" class="form-label fw-semibold">Date of Birth</label>
                                            <input type="date" id="dob" name="dob" class="form-control form-control-lg border-2" required 
                                            <% if (formData && formData.dob) { %> value="<%= formData.dob %>" <% } else { %> value="" <% } %>>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="address" class="form-label fw-semibold">Address</label>
                                    <textarea id="address" name="address" class="form-control border-2" rows="3" required><% if (formData && formData.address) { %><%= formData.address %><% } %></textarea>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="contact" class="form-label fw-semibold">Contact Number</label>
                                    <input type="tel" id="contact" name="contact" class="form-control form-control-lg border-2" required 
                                    <% if (formData && formData.contact) { %> value="<%= formData.contact %>" <% } else { %> value="" <% } %>>
                                </div>
                                
                                <!-- Hidden field to set role as user (member) -->
                                <input type="hidden" name="role" value="user">
                                
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg py-3 fw-semibold">Create Account</button>
                                </div>
                                
                                <div class="text-center mt-3">
                                    <p class="mb-0 text-muted">Already have an account? <a href="/login" class="text-decoration-none fw-semibold">Sign in here</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>